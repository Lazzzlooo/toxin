- var classes = ['header__nav', 'nav'];
- var list = [{text:'О нас', isDropdown: false}, {text:'Услуги', isDropdown: true}, {text:'Вакансии', isDropdown: false}, {text:'Новости', isDropdown: false}, {text:'Соглашения', isDropdown: true}]
mixin navItem(itemClass, dropdown, item)
    li(class=itemClass)
        if dropdown
            a(class="nav__link" href="#")= item
            .nav__dropdown
                button.nav__button
                    span.material-icons keyboard_arrow_down
                .nav__dropdown-content
                    - for (var x = 0; x < 3; x++)
                      a(href="#") link #{x+1}

        else
            a(class="nav__link" href="#")= item

nav(class=classes)
    ul.nav__list
      each item in list
          +navItem('nav__item', item.isDropdown, item.text)
